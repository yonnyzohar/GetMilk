<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".customers.ProviderScreenForCustomer"
    tools:showIn="@layout/activity_provider_screen_for_customer">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_gravity="left"
            android:orientation="vertical"
            >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_gravity="left"
            android:orientation="horizontal"
            android:padding="12dp">

            <LinearLayout
                android:layout_width="279dp"
                android:layout_height="133dp"
                android:layout_gravity="left"
                android:orientation="vertical"
                android:padding="12dp">


                <TextView

                    android:id="@+id/nameTXT"
                    android:layout_width="252dp"
                    android:layout_height="wrap_content"
                    android:text="@string/provider_name"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="@dimen/label_size_huge"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/is_ibclc"
                    android:layout_width="251dp"
                    android:layout_height="wrap_content"
                    android:text="@string/isIbclc"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textSize="17dp" />

                <TextView
                    android:id="@+id/priceTXT"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="-20sp"
                    android:text="@string/price"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="81dp"
                    android:layout_height="27dp"
                    android:layout_gravity="left"
                    android:text="@string/for_a_visit"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="193dp"
                    android:layout_height="64dp"
                    android:layout_gravity="right"
                    android:layout_marginRight="-30dp"
                    android:layout_marginTop="-65dp"
                    android:gravity="right"
                    android:orientation="horizontal"
                    android:scaleX=".8"
                    android:scaleY=".8">

                    <ImageView
                        android:id="@+id/star_1"
                        android:layout_width="60dp"
                        android:layout_height="54dp"
                        android:layout_marginRight="-30dp"
                        android:layout_marginTop="10dp"
                        android:scaleX=".6"
                        android:scaleY=".6"
                        android:src="@drawable/star" />

                    <ImageView
                        android:id="@+id/star_2"
                        android:layout_width="60dp"
                        android:layout_height="54dp"
                        android:layout_marginRight="-30dp"
                        android:layout_marginTop="10dp"
                        android:scaleX=".6"
                        android:scaleY=".6"
                        android:src="@drawable/star" />

                    <ImageView
                        android:id="@+id/star_3"
                        android:layout_width="60dp"
                        android:layout_height="54dp"
                        android:layout_marginRight="-30dp"
                        android:layout_marginTop="10dp"
                        android:scaleX=".6"
                        android:scaleY=".6"
                        android:src="@drawable/star" />

                    <ImageView
                        android:id="@+id/star_4"
                        android:layout_width="60dp"
                        android:layout_height="54dp"
                        android:layout_marginRight="-30dp"
                        android:layout_marginTop="10dp"
                        android:scaleX=".6"
                        android:scaleY=".6"
                        android:src="@drawable/star" />

                    <ImageView
                        android:id="@+id/star_5"
                        android:layout_width="60dp"
                        android:layout_height="54dp"
                        android:layout_marginTop="10dp"
                        android:scaleX=".6"
                        android:scaleY=".6"
                        android:src="@drawable/star" />

                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:id="@+id/profile_image"
                android:layout_width="89dp"
                android:layout_height="96dp"
                android:layout_gravity="right" />




        </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorPrimary"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                ></View>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:padding="10dp"
                android:scrollbars="vertical"
                android:text="@string/about_me_header"
                android:textSize="@dimen/label_size_small" />




            <TextView
                android:id="@+id/bio"
                android:layout_width="match_parent"
                android:layout_height="159dp"
                android:maxLines="6"
                android:minLines="2"
                android:padding="10dp"
                android:textSize="@dimen/label_size_med"
                android:scrollbars="vertical" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorPrimary"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                ></View>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:padding="10dp"
                android:scrollbars="vertical"
                android:text="@string/my_reviews"
                android:textSize="@dimen/label_size_small" />


            <ListView
                android:layout_width="match_parent"
                android:id="@+id/provider_reviews"
                android:layout_height="match_parent"></ListView>

            <com.facebook.login.widget.LoginButton
                android:id="@+id/login_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorPrimary"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                ></View>


            <Button
                android:textColor="#fff"
                android:layout_gravity="center"
                android:textSize="@dimen/label_size_small"
                android:id="@+id/oder_consultant_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/roundedbutton_green_single_line"
                android:text="@string/order_consultation"
                tools:ignore="MissingConstraints"
                android:scaleX=".9"
                />


        </LinearLayout>




    </ScrollView>

</LinearLayout>