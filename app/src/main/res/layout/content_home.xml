<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".HomeActivity"
    android:orientation="vertical"
    android:padding="12dp"
    tools:showIn="@layout/activity_home"

    >

    <TextView

        android:id="@+id/profile_name"
        android:layout_width="351dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/select_user"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="@dimen/label_size_huge"
        android:textStyle="bold"
        android:layout_marginBottom="20sp"
        android:layout_marginTop="20sp"/>


    <Button
        android:id="@+id/consultantBTN"
        android:text="@string/consultant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/roundedbutton_blue_single_line"
        android:paddingBottom="30dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:paddingTop="30dp"
        android:textColor="#fff"
        android:textSize="@dimen/label_size_med"

        />

    <Button
        android:id="@+id/customerBTN"
        android:text="@string/customer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="30dp"
        android:background="@drawable/roundedbutton_green_single_line"
        android:paddingBottom="30dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:paddingTop="30dp"
        android:textColor="#fff"
        android:textSize="@dimen/label_size_med"
        tools:ignore="MissingConstraints"



        />


    <com.google.android.gms.common.SignInButton
        android:id="@+id/sign_in_button"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</LinearLayout>